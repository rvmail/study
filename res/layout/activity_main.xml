<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.newtv.MainActivity" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="124px"
        android:layout_height="168px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/corners_bg"
        android:nextFocusDown="@+id/imageView3"
        android:nextFocusLeft="@id/imageView3"
        android:nextFocusRight="@+id/imageView1"
        android:nextFocusUp="@+id/imageView1"
        android:onClick="onClick"
        android:src="@drawable/mid" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="124px"
        android:layout_height="168px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/imageView2"
        android:background="@drawable/corners_bg"
        android:nextFocusRight="@id/imageView2"
        android:nextFocusUp="@id/imageView2"
        android:onClick="onClick"
        android:padding="5dp"
        android:src="@drawable/right" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="124px"
        android:layout_height="168px"
        android:layout_centerVertical="true"
        android:layout_marginRight="60dp"
        android:layout_toLeftOf="@+id/imageView2"
        android:background="@drawable/corners_bg"
        android:nextFocusDown="@id/imageView2"
        android:nextFocusLeft="@id/imageView2"
        android:onClick="onClick"
        android:padding="5dp"
        android:src="@drawable/left" />

</RelativeLayout>